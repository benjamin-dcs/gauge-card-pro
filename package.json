{
  "name": "gauge-card-pro",
  "version": "1.0.0-rc1-dev",
  "description": "Gauge Card Pro",
  "main": "index.js",
  "scripts": {
    "start": "rollup -c --watch --bundleConfigAsCjs",
    "build": "BUILD_NON_COMPACT=true rollup -c --bundleConfigAsCjs",
    "buildRelease": "NODE_ENV=production rollup -c --bundleConfigAsCjs",
    "depcheck": "depcheck --ignores='eslint,@babel/preset-env'",
    "format": "prettier --write --list-different .",
    "start:hass-stable": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:stable",
    "start:hass": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:beta",
    "start:hass-dev": "docker run --rm -p8123:8123 -v ./.hass_dev:/config homeassistant/home-assistant:dev",
    "test": "vitest run --silent passed-only"
  },
  "author": "Benjamin DCS",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjamin-dcs/gauge-card-pro"
  },
  "license": "ISC",
  "dependencies": {
    "@material/mwc-ripple": "^0.27.0",
    "home-assistant-js-websocket": "^9.4.0",
    "lit": "^3.2.1",
    "memoize-one": "^6.0.0",
    "object-hash": "^3.0.0",
    "superstruct": "^2.0.2",
    "tinygradient": "^2.0.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "rollup": "^4.34.8",
    "typescript": "^5.7.3",
    "vitest": "^3.1.2"
  }
}
